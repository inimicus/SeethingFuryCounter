<GuiXml>
    <Controls>
        <TopLevelControl name="SFC_PlayerToPlayerResurrect">
            <Controls>
                <Cooldown name="$(parent)Progress"
                    textureFile="EsoUI/Art/HUD/reviveMeter_progbar.dds"
                    alpha="0"
                    movable="true"
                    mouseEnabled="true"
                    fillColor="E0A332"
                    clampedToScreen="true">
                        <Dimensions x="128" y="128" />
                        <Anchor point="CENTER" relativeTo="GuiRoot"/>
                        <Controls>
                            <Texture name="$(parent)Frame" textureFile="EsoUI/Art/HUD/reviveMeter_frame.dds">
                                <Dimensions x="128" y="128" />
                                <Anchor point="CENTER" offsetX="1" offsetY="-1" />
                            </Texture>
                            <Label name="$(parent)Count"
                                font="$(BOLD_FONT)|$(KB_36)|soft-shadow-thick"
                                color="FFFFFF"
                                horizontalAlignment="CENTER"
                                verticalAlignment="CENTER"
                                text="0">
                                    <Dimensions x="128" y="128" />
                                    <Anchor point="CENTER" relativeTo="$(parent)" offsetX="0" offsetY="0"/>
                            </Label>
                        </Controls>
                </Cooldown>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
